<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Project</title>

    <link rel="stylesheet" href="/css/personalweb.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <a class="btn btn-dark" href="/my-project">Back</a>
      </div>
    </nav>

    <section class="webpage section">
      <div class="container">
        <h2>EDIT PROJECT</h2>

  <form action="/my-project/{{project.id}}/edit" 
        method="POST" 
        enctype="multipart/form-data">
          <label class="form-label">Project Name</label>
          <input
            type="text"
            class="form-control"
            name="projectName"
            value="{{project.name}}"
            required
          />

          <label class="form-label mt-3">Start Date</label>
          <input
            type="date"
            class="form-control"
            name="startDate"
            value="{{project.startDate}}"
          />

          <label class="form-label mt-3">End Date</label>
          <input
            type="date"
            class="form-control"
            name="endDate"
            value="{{project.endDate}}"
          />

          <label class="form-label mt-3">Description</label>
          <textarea
            class="form-control"
            name="description"
            rows="3"
          >{{project.description}}</textarea>

          <label class="form-label mt-3">Technologies</label>
          <div class="mb-3">
        <input
          type="checkbox"
          name="technologies"
          value="HTML"
          {{#if (includes project.technologies "HTML")}}checked{{/if}}
        > HTML

        <input
          type="checkbox"
          name="technologies"
          value="CSS"
          {{#if (includes project.technologies "CSS")}}checked{{/if}}
        > CSS

        <input
          type="checkbox"
          name="technologies"
          value="JavaScript"
          {{#if (includes project.technologies "JavaScript")}}checked{{/if}}
        > JavaScript

        <div class="mb-3">
          <label class="form-label">Upload Image</label>
          <input type="file" name="image" class="form-control" />
        </div>
          <div class="text-end mt-4">
            <button type="submit" class="btn btn-dark">
              Update
            </button>
          </div>
        </form>
      </div>
    </section>
  </body>
</html>