<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Web</title>

    <link rel="stylesheet" href="/css/personalweb.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <a class="btn btn-dark" href="/">Home</a>
        <a class="btn btn-dark" href="/my-project">My Project</a>
        <a class="btn btn-dark" href="/contact">Contact</a>
        <a href="#" class="btn btn-dark btn-sm ms-auto">Contact Me</a>
      </div>
    </nav>

  <div class="container mt-4 d-flex justify-content-end align-items-center gap-3">
    <p>Welcome, {{user.name}}</p>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
  </div>

    <section class="webpage section">
      <div class="container">
        <h2>ADD MY PROJECT</h2>

        <form id="projectForm" action="/my-project" method="POST">
          <label class="form-label">Project Name</label>
          <input type="text" class="form-control" name="projectName" required />

          <label class="form-label mt-3">Start Date</label>
          <input type="date" class="form-control" name="startDate" />

          <label class="form-label mt-3">End Date</label>
          <input type="date" class="form-control" name="endDate" />

          <label class="form-label mt-3">Description</label>
          <textarea
            class="form-control"
            name="description"
            rows="3"
            placeholder="About your project.."
          ></textarea>

          <label class="form-label mt-3">Technologies</label>
          <div class="mb-3">
        <input
          type="checkbox"
          name="technologies"
          value="HTML"
          {{#if (includes project.technologies "HTML")}}checked{{/if}}
        > HTML

        <input
          type="checkbox"
          name="technologies"
          value="CSS"
          {{#if (includes project.technologies "CSS")}}checked{{/if}}
        > CSS

        <input
          type="checkbox"
          name="technologies"
          value="JavaScript"
          {{#if (includes project.technologies "JavaScript")}}checked{{/if}}
        > JavaScript

          </div>

          <label class="form-label">Upload Image</label>
          <input type="file" class="form-control mb-4" />

          <div class="text-end">
            <button type="submit" class="btn btn-dark px-4 rounded-pill">
              Submit
            </button>
          </div>
        </form>
      </div>
    </section>

    <section class="hasil section">
      <div class="container">
        <h2 class="hasilsubmit">MY PROJECT</h2>

        <div id="projectList" class="row g-4">
          {{#each projects}}
            <div class="col-md-4">
              <div class="card p-3">
                <h5>{{this.name}}</h5>
                <p>{{this.description}}</p>
                <small>{{this.startDate}} - {{this.endDate}}</small>

                <div class="mt-3 d-flex gap-2">
                  <a href="/my-project/{{this.id}}" class="btn btn-dark btn-sm">
                    Detail
                  </a>

                  <a
                    href="/my-project/{{this.id}}/edit"
                    class="btn btn-warning btn-sm"
                  >
                    Edit
                  </a>

                  <form action="/my-project/{{this.id}}/delete" method="POST">
                    <button
                      type="submit"
                      class="btn btn-danger btn-sm"
                      onclick="return confirm('Yakin hapus project?')"
                    >
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {{/each}}

          {{#unless projects.length}}
            <p class="text-center">Belum ada project</p>
          {{/unless}}
        </div>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>